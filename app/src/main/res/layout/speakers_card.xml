<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorHomeCard"
    app:cardCornerRadius="5dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/vistalogo_dark"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:id="@+id/speakers_card_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speakers_card_name"
            android:text="Speaker Name"
            android:textColor="#D7DBDD"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="25dp"/>
        
        <View
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorHomeText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speakers_card_designation"
            android:text="Designation"
            android:textSize="20dp"
            android:textColor="#D7DBDD"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        
    </LinearLayout>

</android.support.v7.widget.CardView>