<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorHomeCard"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@mipmap/vistalogo_dark"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/sponsors_card_img"/>

        <View
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorHomeText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:id="@+id/sponsors_card_title"
            android:text="Sponsor Title"
            android:textSize="20dp"
            android:textColor="#D7DBDD"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/sponsors_card_name"-->
            <!--android:text="Sponsor Name"-->
            <!--android:textColor="#D7DBDD"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:textAlignment="center"-->
            <!--android:textSize="25dp"/>-->

        
    </LinearLayout>

</android.support.v7.widget.CardView>